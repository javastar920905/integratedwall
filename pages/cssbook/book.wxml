<!--背景图-->
<view style="background:url({{imgPrefix}}backGroundImgURL.jpg)">
  <!--顶部可伸缩 帮助导航  -->
  <view class='headTop'>
    <view class='headTop-child {{headTopAnimate}}'>
      <view class='headTop-Item' hover-class='buttomTabItem-active'>
        <image style=' width: 25px;height: 25px' src="{{iconPrefix}}search.png" />
      </view>
    </view>
  </view>
  <!--中间主体翻书效果图册  -->
  <view class="myswiper pre-3d" style="height: {{clientHeight?clientHeight-60+'px':'auto'}}">
    <view bind:touchstart="handletouchtart" bind:touchend='handletouchend' bindtap='handletap'>
      <block wx:for="{{unreadImgs}}" wx:key="img2">
        <image src="{{(index>readIdx+2||item.img=='')?'':imgPrefix+item.img+imgSuffix}}" class="slide-image" style="transform: rotateY({{item.y}}deg);z-index:{{item.zidx}};" />
      </block>
    </view>

    <!--底部跳页控件  -->
  <view class='jumpPageTab'>
    <view class="jumpPageTab-child {{showJumpPageTab?'jumpPageTab-slideUp':'jumpPageTab-slideDown'}}">
      <view class='buttomTabItem'>
        <text style='color:white;font-size:12px;' bindtap='jumpPageFirst'>首页</text>
      </view>
      <view class='buttomTabItem'>
        <text style='color:white;font-size:12px;' bindtap='turnPagePreview'>上页</text>
      </view>
      <view class='buttomTabItem'>
        <text style='color:white;font-size:12px;'>。。。</text>
      </view>
      <view class='buttomTabItem'>
        <text style='color:white;font-size:12px;'>-></text>
      </view>
      <view class='buttomTabItem'>
        <text style='color:white;font-size:12px;' bindtap='turnPageNext'>下页</text>
      </view>
      <view class='buttomTabItem'>
        <text style='color:white;font-size:12px;' bindtap='jumpPageLast'>尾页</text>
      </view>
    </view>
  </view>

    <!-- 展示所有背景墙图片wx-if="{{isShowAllImages}}"   -->
    <view wx-if="{{isShowAllImages}}" class='showAllImages'>
      <view class="section">
        <scroll-view scroll-y style="height:{{clientHeight?clientHeight-60+'px':'auto'}}" bindscroll="handlescroll" scroll-into-view="{{toView}}" scroll-top="{{scrollTop}}">
          <view id="scroll-view1" class="scroll-view-item">
            <view wx:for="{{lazyImgs}}" wx:key="img" class="scroll-view-img-box" style="width:{{(clientWidth-70)/3+'px'}};height:{{(clientHeight-60)/4+'px'}}">
              <image src="{{item==null?'':imgPrefix+item+imgSuffix}}" class="scroll-view-img  {{readIdx==index?'scroll-view-img-active':''}}" bindtap='handleLazyImgTap' data-index="{{index}}" />
              <image src="loading.gif" class="img-loading" hidden="{{item==null?false:'true'}}" />
              <text> {{index+1}} </text>
            </view>
          </view>
        </scroll-view>
      </view>
    </view>
  </view>

  <!--底部导航  -->
  <view class='bottomTab'>
    <view class='bottomTab-child {{bottomAnimate}}'>
      <view class='buttomTabItem' hover-class='buttomTabItem-active' bindtap="showAllImage">
        <image class='buttomImage' src='data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAABYAAAAWCAYAAADEtGw7AAAAWklEQVRIS2NkoBFgpJG5DPQx+MyZM/9x+cDExATsCGLUgNShuBikCWYAsgXI4sSoGTUYJRjpF8Y0SRXUzCyjGQQeAvRLFaNZGpyEiSkSiVGDUboNvQxCTRcDAF8swBeCta3+AAAAAElFTkSuQmCC '
        />
      </view>
      <view class='buttomTabItem' hover-class='buttomTabItem-active'>
        <image class='buttomImage' src='data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAABYAAAAWCAYAAADEtGw7AAAATklEQVRIS2NkoBFgpJG5DMPA4DNnzvyHBY+JiQkjMp9QsIHUw9RgBAXIIJiByAoJGYouj9VgmriYVJfhUj+aKkZTBWbaGE0Vo6liOKQKANZ4SBcS9xvdAAAAAElFTkSuQmCC ' />
      </view>
      <view class='buttomTabItem' hover-class='buttomTabItem-active'>
        <text style='color:white;font-size:12px;' bindtap='showJumpPageTab'>跳页</text>
      </view>
      <view class='buttomTabItem' hover-class='buttomTabItem-active'>
        <text style='color:white;font-size:12px;' hidden="{{scale}}" bindtap='startScale'>放大</text>
        <text style='color:white;font-size:12px;' hidden="{{!scale}}" bindtap='stopScale'>缩小</text>
      </view>
      <view class='buttomTabItem' hover-class='buttomTabItem-active'>
        <!-- <image class='buttomImage' src="{{iconPrefix}}search.png" /> -->
        <text style='color:white;font-size:12px;' hidden="{{autoPlay}}" bindtap='startPlay'>播放</text>
        <text style='color:white;font-size:12px;' hidden="{{!autoPlay}}" bindtap='stopPlay'>停止</text>
      </view>
      <view class='buttomTabItem' hover-class='buttomTabItem-active'>
        <image class='buttomImage' src="{{iconPrefix}}search.png" />
      </view>
    </view>
  </view>

  

</view>